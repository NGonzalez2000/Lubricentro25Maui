<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Lubricentro25.Controls.Cards.Migrations.MigrationCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:data="clr-namespace:Lubricentro25.Models.Migration"
    x:DataType="data:MigrationHandler">
    <Grid Margin="0,5" ColumnDefinitions="*,*,*">
        <Label Text="{Binding MigrationName}" VerticalOptions="Center" />
        <Button
            Grid.Column="2"
            Command="{Binding MigrateCommand}"
            Text="Migrar"
            VerticalOptions="Center" />
    </Grid>
</ContentView>
