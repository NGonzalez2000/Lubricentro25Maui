<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="Lubricentro25.Controls.Cards.Migrations.ClientMigrationCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Lubricentro25.Models"
    x:DataType="models:Client"
    ColumnDefinitions="*,*,*,*,*"
    ColumnSpacing="10">

    <Label Padding="10,0,0,0" Text="{Binding ClientName}" />
    <Label
        Grid.Column="1"
        Padding="10,0,0,0"
        Text="{Binding Cuil}" />
    <Label
        Grid.Column="2"
        Padding="10,0,0,0"
        Text="{Binding Address.City}" />
    <Label
        Grid.Column="3"
        Padding="10,0,0,0"
        Text="{Binding Address.Street}" />
    <Label
        Grid.Column="4"
        Padding="10,0,0,0"
        Text="{Binding TaxCondition.Description}" />
</Grid>
