<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Lubricentro25.Controls.Cards.VatTypeCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:data="clr-namespace:Lubricentro25.Models"
    x:DataType="data:VatType"
    HeightRequest="40">
    <Grid Padding="20,0" ColumnDefinitions="*,*,*">
        <Label Text="{Binding Description}" />
        <Label Grid.Column="1" Text="{Binding Aliquota, StringFormat='{0} %'}" />
        <Label Grid.Column="2" Text="{Binding AfipCode}" />
    </Grid>
</ContentView>
