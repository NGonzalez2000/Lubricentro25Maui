<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Lubricentro25.Controls.Cards.ClientTypeCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cards="clr-namespace:Lubricentro25.Controls.Cards"
    xmlns:data="clr-namespace:Lubricentro25.Models"
    x:DataType="data:ClientType"
    MinimumHeightRequest="30">

    <Grid ColumnDefinitions="*,*">
        <Label
            Grid.Column="0"
            Style="{StaticResource CardLabel}"
            Text="{Binding Description}" />
        <Label
            Grid.Column="1"
            Style="{StaticResource CardLabel}"
            Text="{Binding Order}" />
    </Grid>
</ContentView>
